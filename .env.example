# HackRX 5.0 Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# Groq API Configuration
GROQ_API_KEY=your_actual_groq_api_key_here
GROQ_MODEL=llama3-8b-8192

# Authentication
BEARER_TOKEN=your_bearer_token_here

# Hugging Face API Configuration
HUGGINGFACE_API_TOKEN=your_actual_huggingface_token_here
HUGGINGFACE_HUB_TOKEN=your_actual_huggingface_token_here

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Embedding Model Configuration
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5

# Fix OpenMP library conflict
KMP_DUPLICATE_LIB_OK=TRUE

# Optimized settings for low latency and rate limiting
CHUNK_SIZE=1200
CHUNK_OVERLAP=200
RETRIEVAL_K=2
BATCH_SIZE=16
REQUEST_TIMEOUT=120

# Instructions:
# 1. Get Groq API key from: https://console.groq.com/keys
# 2. Get Hugging Face token from: https://huggingface.co/settings/tokens
# 3. Generate a secure bearer token for your API
# 4. Save this file as .env (remove .example)
